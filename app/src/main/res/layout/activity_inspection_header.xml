<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/gradient_background"
                android:padding="13dp"
                android:src="@drawable/ceklistt"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="Form Isi Data"
                android:textColor="#4F46E5"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Lengkapi informasi berikut untuk\nmelanjutkan"
                android:textColor="#6B7280"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="Nomor WO"
            android:textColor="#374151"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/nomerwo"
            app:drawableTint="#4F46E5"/>

        <EditText
            android:id="@+id/etNoWo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_selector"
            android:hint="Masukkan nomor WO"
            android:inputType="text"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="Tanggal Pelaksanaan"
            android:textColor="#374151"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/calender"
            app:drawableTint="#4F46E5"/>

        <EditText
            android:id="@+id/etTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_selector"
            android:drawableEnd="@drawable/calenderkecil"
            android:drawableTint="#374151"
            android:focusable="false"
            android:clickable="true"
            android:text="06/02/2026"
            android:inputType="date"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="Nama Site"
            android:textColor="#374151"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/map"
            app:drawableTint="#4F46E5"/>

        <AutoCompleteTextView
            android:id="@+id/acNamaSite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_selector"
            android:hint="Ketik untuk mencari site"
            android:inputType="text"
            android:completionThreshold="1"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="Tipe POP"
            android:textColor="#374151"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/pop"
            app:drawableTint="#4F46E5" />

        <EditText
            android:id="@+id/etTipePop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_selector"
            android:hint="Otomatis terisi"
            android:focusable="false"
            android:clickable="false"
            android:textColor="#6B7280"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="Model Bangunan"
            android:textColor="#374151"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/building"
            app:drawableTint="#4F46E5" />

        <EditText
            android:id="@+id/etModelBangunan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_selector"
            android:hint="Otomatis terisi"
            android:focusable="false"
            android:clickable="false"
            android:textColor="#6B7280"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="Pelaksana"
            android:textColor="#374151"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/pelaksana"
            app:drawableTint="#4F46E5" />

        <AutoCompleteTextView
            android:id="@+id/inputPelaksana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_selector"
            android:hint="Pilih Pelaksana"
            android:textColorHint="#9CA3AF"
            android:textSize="14sp"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:cursorVisible="false"
            android:drawableEnd="@drawable/arrowend"
            android:drawableTint="#6B7280"
            android:paddingEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="Pemeriksa"
            android:textColor="#374151"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/pemeriksa"
            app:drawableTint="#4F46E5" />

        <AutoCompleteTextView
            android:id="@+id/inputPemeriksa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_selector"
            android:hint="Pilih Pemeriksa"
            android:textColorHint="#9CA3AF"
            android:textSize="14sp"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:cursorVisible="false"
            android:drawableEnd="@drawable/arrowend"
            android:drawableTint="#6B7280"
            android:paddingEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="Assistant Manager"
            android:textColor="#374151"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/asmen"
            app:drawableTint="#4F46E5" />

        <AutoCompleteTextView
            android:id="@+id/inputAssistantManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_selector"
            android:hint="Pilih Assistant Manager"
            android:textColorHint="#9CA3AF"
            android:textSize="14sp"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:cursorVisible="false"
            android:drawableEnd="@drawable/arrowend"
            android:drawableTint="#6B7280"
            android:paddingEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="Manager"
            android:textColor="#374151"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/manager"
            app:drawableTint="#4F46E5" />

        <AutoCompleteTextView
            android:id="@+id/inputManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_selector"
            android:hint="Pilih Manager"
            android:textColorHint="#9CA3AF"
            android:textSize="14sp"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:cursorVisible="false"
            android:drawableEnd="@drawable/arrowend"
            android:drawableTint="#6B7280"
            android:paddingEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="Area"
            android:textColor="#374151"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/area"
            app:drawableTint="#4F46E5" />

        <EditText
            android:id="@+id/etArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_selector"
            android:hint="Otomatis terisi"
            android:focusable="false"
            android:clickable="false"
            android:textColor="#6B7280"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLanjut"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:text="Lanjut"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:backgroundTint="@null"
            android:background="@drawable/blue_gradient"
            app:icon="@drawable/ic_check_circle"
            app:iconGravity="textEnd"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white"
            android:insetTop="0dp"
            android:insetBottom="0dp" />

    </LinearLayout>
</ScrollView>